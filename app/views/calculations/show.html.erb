<div class="section-overlay-modify">
  <!-- main -->
  <div class="main">
  	<!-- header -->
  	<header class="header-site">
  		<div class="logo-site animated bounceInDown" data-animation-delay="700">
  			<h1> Meya Currency Predictor </h1>
  		</div>
  	</header>
  	<!-- /header -->

  	<!-- section -->
  	<section class="section fullscreen site-main">
  		<div class="container-section">
  				<div class="container-table">
  					<div class="content-table">
  					<!-- bt-carousel -->
  					<div class="bt-carousel">

  						<!-- home section -->
  						<div class="item-slide show">
  							<!-- container -->
  							<div class="container">
  								<div class="row">
  									<div class="col-md-10 col-md-offset-1">

  									<!-- content slide -->
  									<div class="content-slide">
                      <h4 class="color-white top-margin animated bounceInDown" data-animation-delay="700" ><strong><%= @calculation.num_of_days%> Week(s) Conversion for
                        <%= @calculation.amount %> <%=@calculation.base_currency%> to <%= @calculation.conversion_currency %></strong></h4>

  										<!-- Subscribe Form -->
  										<div class="form animated bounceInUp" data-animation-delay="700">
  											<!-- container form -->
  											<div class="container-form">
  												<!-- section page -->
  												<div class="section-page" id="signup">
  													<% unless user_signed_in? %>
  														<form class="sign-up-sign-in-form" method="post" id="mc-form">
  															<a href="<%= new_user_registration_path %>"><button type="submit" id="" class="border-button no-bottom-margin">Register</button></a>
  															<a href="<%= new_user_session_path %>"><button type="submit" id="" class="border-button no-bottom-margin">Sign In</button></a>
  														</form>
  													<% else %>
                              <%= area_chart @result.value %>
                              <!-- Button trigger modal -->
                              <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#summary-table">
                                View Full Prediction Table
                              </button>
  													<% end %>
  												</div>
  												<!-- /section page -->
  											</div>
  											<!-- /container form -->
                        <table class="table table-sm table-bordered">
                          <thead>
                            <tr>
                              <th>Rank</th>
                              <th>Year/Week</th>
                              <th>Exchange Rate</th>
                              <th>Total Amount</th>
                              <th>Profit/Loss</th>
                            </tr>
                          </thead>
                          <tbody>
                            <tr>
                              <th scope="row">1</th>
                              <th scope="row"></th>
                              <th scope="row"></th>
                              <th scope="row"></th>
                              <th scope="row"></th>
                            </tr>
                            <tr>
                              <th scope="row">2</th>
                              <th scope="row"></th>
                              <th scope="row"></th>
                              <th scope="row"></th>
                              <th scope="row"></th>
                            </tr>
                            <tr>
                              <th scope="row">3</th>
                              <th scope="row"></th>
                              <th scope="row"></th>
                              <th scope="row"></th>
                              <th scope="row"></th>
                            </tr>
                          </tbody>
                        </table>
  										</div>
  										<!-- /Subscribe Form -->

  									</div><!-- /content slide -->
  									</div>
  								</div>
  								<!-- /row -->
  							</div>
  							<!-- /container -->
  						</div>
  						<!-- /home section -->

  					</div>
  					<!-- /bt-carousel -->
  				</div>
  			</div>
  		</div>
  	</section>
  	<!-- /section -->
  </div>
  <!-- /main -->
</div>
<!-- Modal -->
<div class="modal fade" id="summary-table" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
